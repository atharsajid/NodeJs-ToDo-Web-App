<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block w-full rounded-md outline-none  px-5 py-2 bg-zinc-800" type="text"
                    placeholder="Title" name="title">
                <textarea class="block w-full rounded-md outline-none mt-2 px-5 py-2 resize-none bg-zinc-800"
                    placeholder="Write your task details" name="details"></textarea>
                <input class="mt-2 bg-amber-200 px-5 py-2 rounded-md text-black" type="submit" value="Create task">
            </form>
        </div>
        <div class="tasks flex gap-3 flex-wrap p-10">
            <% if(files.length>0){
                %>
                <% files.forEach(function(val){ %>
                    <div class="card">
                        <form action="/delete/<%=val%>" method="post"
                            onsubmit="return confirm('Are you sure you want to delete this?');">
                            <!-- Simulating DELETE request with a hidden input -->
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="delete-icon">&times;</button>
                        </form>

                        <div class="title">
                            <%=val%>
                        </div>

                        <button class="read-more-btn" onclick="window.location.href='/file/<%= val %>'">Read
                            More</button>
                    </div>
                    <!-- <div class="task min-w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <span class="delete-icon">&times;</span>
                        <h1 class="text-white text-3xl tracking-tighter">
                            <%=val%>
                        </h1>
                        <a class="text-amber-200 inline-block mt-3" href="/file/<%= val %>">Read more.</a>
                        
                    </div> -->
                    <% }) %>
                        <% }else{ %>
                            <h3 class="text-zinc-600">No task yet.</h3>

                            <% } %>




        </div>
    </div>

    <script src="/javascripts/scripts.js"></script>
</body>

</html>